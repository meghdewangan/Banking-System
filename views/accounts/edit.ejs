<% layout('layout/village') %>
    <div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header bg-info">
                    <h1>Update Account</h1>
                </div>
                    <form action="/accounts/<%=account.id%>?_method=PUT" class="needs-validation" method="POST">
                <div class="col">
                        <label for="Name" class="input-group-text">Name</label>
                        <input type="text" id="name" class="form-control" name="account[name]" value="<%=account.name %> ">
                </div>
                <div class="col">
                        <label for="bankName" class="input-group-text">Bank Name</label>
                        <input type="text" id="bankName" class="form-control" name="account[bankName]" value="<%=account.bankName %> ">
                </div>
                <div class="col">
                    <label for="accountType" class="input-group-text">AccountType</label>
                        <select name="accountType" class="form-select" id="accountType">
                            <option value="seaving">saving</option>
                            <option value="current">current</option>
                            <option value="fixed">fixed</option>
                            <option value="recurring">recurring</option>
                        </select> 
                </div>
                <div class="col">
                    <label for="accountNumber" class="input-group-text">Account Number</label>
                    <input type="text" id="accountNumber" class="form-control" name="account[accountNumber]" value="<%=account.accountNumber %> ">
                </div>
                <div class="col">
                    <label for="branch" class="input-group-text">Branch</label>
                    <input type="text" id="branch" class="form-control" name="account[branch]" value="<%=account.branch %> ">
                </div>
                <div class="col" >
                    <label for="contactNumber" class="input-group-text">Contact Number</label>
                    <input type="text" id="contactNumber" class="form-control" name="account[contactNumber]" value="<%=account.contactNumber %> ">
                </div>
                <div class="col">
                    <label for="email" class="input-group-text">Email</label>
                    <input type="text" id="email" class="form-control" name="account[email]" value="<%=account.email %> ">
                </div>
                <div class="col">
                    <label for="city" class="input-group-text">City</label>
                    <input type="text" id="city" class="form-control" name="account[city]" value="<%=account.city %> ">
                </div>
                <div class="col">
                    <label for="address" class="input-group-text">Address</label>
                    <input type="text" id="address" class="form-control" name="account[address]" value="<%=account.address %> ">
                </div>
                <div class="col">
                    <label for="balance" class="input-group-text">Balance</label>
                    <input type="text" id="balance" class="form-control" name="account[balance]" value="<%= account.balance %> ">
                </div>

                <button class="btn btn-success">Update</button>
                <a class="btn btn-dark" href="/accounts">Back to Home</a>
            </form>
        </div>
    </div>
</div>
</div>
</div>
    <a href="/accounts/<%=account.id  %> ">All accounts</a>