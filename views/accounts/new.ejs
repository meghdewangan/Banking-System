<% layout('layout/village') %>
   
<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header bg-info">
                    <h1>New Account</h1>
                </div>
                <div class="card-body">
                    <form action="/accounts" method="POST" class="needs-validation">
                            <div class="col">
                                <label for="Name" class="input-group-text">Name</label>
                                <input type="text" class="form-control" id="name" name="account[name]">
                            </div>
                            <div class="col">
                                <label for="bankName" class="input-group-text">Bank Name</label>
                                <input type="text" id="bankName" class="form-control" name="account[bankName]">
                            </div>
                            <div class="col">
                                <label for="accountType" class="input-group-text">Account Type</label>
                                <select name="account[accountType]" class="form-select" id="accountType">
                                    <option value="saving">saving</option>
                                    <option value="current">current</option>
                                    <option value="fixed">fixed</option>
                                    <option value="recurring">recurring</option>
                                </select> 
                            </div>
                            <div class="col">
                                    <label for="accountNumber">Account Number</label>
                                    <input type="text" id="accountNumber" class="form-control" name="account[accountNumber]">
                            </div>
                            <div class="col">     
                                    <label for="branch">Branch</label>
                                    <input type="text" id="branch" class="form-control" name="account[branch]">
                            </div> 
                            <div class="col">
                                    <label for="contactNumber" class="input-group-text">Contact Number</label>
                                    <input type="text" id="contactNumber" class="form-control" name="account[contactNumber]">
                            </div>
                            <div class="col"> 
                                    <label for="email" class="input-group-text">Email</label>
                                    <input type="text" id="email" class="form-control" name="account[email]">
                            </div>
                            <div class="col">
                                    <label for="city" class="input-group-text">City</label>
                                    <input type="text" id="city" class="form-control" name="account[city]">
                            </div>
                            <div class="col">
                                     <label for="address" class="input-group-text">Address</label>
                                    <input type="text" id="address" class="form-control" name="account[address]">
                            </div>
                            <div class="col-3">
                                    <label for="balance" class="input-group-text">Balance</label>
                                    <input type="text" id="balance" class="form-control" name="account[balance]">
                            </div>
                                    <button class="btn btn-success">Add Account</button>
                                    <a class="btn btn-dark" href="/accounts">Back to Home</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>